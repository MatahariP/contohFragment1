<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    tools:context=".RadioButtonFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yang mana yang bukan Identitas kamu?"
        android:layout_marginBottom="@dimen/activity_vertical_margin" />

    <RadioGroup
        android:id="@+id/rg_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_awr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matahari Pradipta"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />
        />

        <RadioButton
            android:id="@+id/rb_unai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2110512086"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <RadioButton
            android:id="@+id/rb_geor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="S1 SI 2021 UPNVJ"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <RadioButton
            android:id="@+id/rb_arteta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perempuan"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:id="@+id/btn_close"
            android:text="Tutup"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginRight="4dp" />

        <Button
            android:id="@+id/btn_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Pilih"
            android:layout_marginLeft="4dp" />
    </LinearLayout>
</LinearLayout>